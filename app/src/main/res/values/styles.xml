        <item name="android:actionBarStyle">@style/action_bar_style</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- support library compat -->
        <item name="actionBarStyle">@style/action_bar_style</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="action_bar_style" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/translucent_white</item>
    </style>

    <style name="gray_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#616161</item>
    </style>
</resources>
