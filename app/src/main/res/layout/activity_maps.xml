<com.litesplash.photomap.SlideUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundView="@+id/background_frame"
    app:panelView="@+id/panel_frame">

    <FrameLayout
        android:id="@+id/background_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/panel_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"/>

</com.litesplash.photomap.SlideUpPanelLayout>


